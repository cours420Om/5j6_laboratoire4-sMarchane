<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity2">

    <TextView
        android:id="@+id/tv_commandePour"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="60dp"
        android:fontFamily="casual"
        android:text="Commande pour:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nomClientRecu"
        android:layout_width="148dp"
        android:layout_height="24dp"
        android:layout_marginTop="92dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_telephoneRecu"
        android:layout_width="157dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nomClientRecu" />

    <TextView
        android:id="@+id/tv_titre"
        android:layout_width="218dp"
        android:layout_height="36dp"
        android:layout_marginTop="84dp"
        android:fontFamily="casual"
        android:text="Menu - Miam-O-Pizza"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_commandePour" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="331dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titre">

        <fragment
            android:id="@+id/fragment1"
            android:name="com.example.labo4.Fragment1"
            android:layout_width="match_parent"
            android:layout_height="118dp" />


        <fragment
            android:id="@+id/fragment2"
            android:name="com.example.labo4.Fragment2"
            android:layout_width="match_parent"
            android:layout_height="108dp" />

        <Button
            android:id="@+id/btn_commander"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:text="Commander le repas sélectionné" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>